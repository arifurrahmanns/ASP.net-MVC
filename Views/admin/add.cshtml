@{
    ViewData["Title"] = "Foods";
}
@model FoodOrdering.Models.Food

<div class="container" style="max-width: 450px;margin:0 auto">
    <form method="post">
        <div class="form-group">
            <label for="">Name</label>
            <input asp-for="name" required type="text" class="form-control" placeholder="Name">

        </div>
        <div class="form-group mt-1">
            <label for="">Price</label>
            <input asp-for="price" required type="number" class="form-control" id="" placeholder="Price">
        </div>

        <button type="submit" class="btn mt-2 w-100 btn-primary">Submit</button>
    </form>

</div>