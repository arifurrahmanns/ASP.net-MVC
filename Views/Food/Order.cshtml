@{
    ViewData["Title"] = "Order";
}
@model FoodOrdering.Models.Order;

<div class="container">
    <h3 class="text-center">
        Confirm your order
    </h3>
    <div style="max-width: 400px; margin:0 auto">
       
        <form method="post" action="">
            <div class="form-group">
                <label for="">Name</label>
                <input asp-for="name" required type="text" class="form-control" placeholder="Name">
            </div>
             <div class="form-group mt-2">
                <label for="">Phone</label>
                <input asp-for="phone" required type="tel" class="form-control" placeholder="Phone">
            </div>
             <div class="form-group mt-2">
                <label for="">Quantity</label>
                <input asp-for="quantity" min="1" required type="number" class="form-control" placeholder="Quantity">
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-3">Confirm Order</button>
        </form>
    </div>
</div>
